{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "replicaCount": {
      "type": "integer",
      "title": "副本数量",
      "description": "要部署的副本数量",
      "minimum": 1,
      "default": 1  
    },
    "image": {
      "type": "object",
      "title": "镜像配置", 
      "properties": {
        "imageRegistry": {
          "type": "string",
          "title": "镜像仓库地址",
          "default": "registry-2.yunna.net"
        },
        "repository": {
          "type": "string",
          "title": "镜像名称",
          "default": "teamspeak" 
        },
        "tag": {
          "type": "string",
          "title": "镜像标签",
          "default": "3.13.7"
        },
        "pullPolicy": {
          "type": "string", 
          "title": "拉取策略",
          "enum": ["Always", "IfNotPresent", "Never"],
          "default": "IfNotPresent"
        }
      }
    },
    "service": {
      "type": "object",
      "title": "服务配置",
      "properties": {
        "type": {
          "type": "string",
          "title": "服务类型",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"],
          "default": "ClusterIP"
        },
        "ports": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "port": {"type": "integer"},
              "protocol": {
                "type": "string",
                "enum": ["TCP", "UDP"]
              }
            }
          }
        }
      }
    },
    "resources": {
      "type": "object",
      "title": "资源配置",
      "properties": {
        "limits": {
          "type": "object",
          "title": "资源限制",
          "properties": {
            "cpu": {
              "type": "string",
              "title": "CPU限制",
              "pattern": "^[0-9]+m?$",
              "default": "500m" 
            },
            "memory": {
              "type": "string", 
              "title": "内存限制",
              "pattern": "^[0-9]+(Mi|Gi)$",
              "default": "1Gi"
            }
          }
        },
        "requests": {
          "type": "object",
          "title": "资源请求", 
          "properties": {
            "cpu": {
              "type": "string",
              "title": "CPU请求",
              "pattern": "^[0-9]+m?$",
              "default": "250m"
            },
            "memory": {
              "type": "string",
              "title": "内存请求", 
              "pattern": "^[0-9]+(Mi|Gi)$",
              "default": "512Mi"
            }
          }
        }
      }
    },
    "persistence": {
      "type": "object",
      "title": "持久化配置",
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "启用持久化",  
          "default": true
        },
        "size": {
          "type": "string",
          "title": "存储大小",
          "pattern": "^[0-9]+(Mi|Gi)$",
          "default": "5Gi"
        },
        "storageClass": {
          "type": "string",
          "title": "存储类",
          "default": "local"
        }
      }
    },
    "env": {
      "type": "object",
      "title": "环境变量",
      "properties": {
        "env1": {
          "type": "object",
          "title": "数据库插件",
          "properties": {
            "name": {
              "type": "string",
              "default": "TS3SERVER_DB_PLUGIN"
            },
            "value": {
              "type": "string", 
              "default": "ts3db_mysql"
            }
          }
        },
        "env2": {
          "type": "object",
          "title": "数据库路径",
          "properties": {
            "name": {
              "type": "string",
              "default": "TS3SERVER_DB_SQLCREATEPATH" 
            },
            "value": {
              "type": "string",
              "default": "create_mysql"
            }
          }
        }
      }
    }
  }
}